[Unit]
Description=WalletConnectPush daemon

[Service]
Type=simple
User=wallet-connect
Group=wallet-connect
ExecStart=/usr/local/bin/wallet-connect-push
ExecStop=/bin/kill `/bin/ps aux | /bin/grep 'wallet-connect-push$' | /bin/grep -v grep | /usr/bin/awk '{ print $2 }'`

[Install]
WantedBy=multi-user.target
